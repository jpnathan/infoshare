<div>
	<%= form_for @job do |f| %>

		<% if @job.errors.any? %>
			<div>
				<h2> <%= pluralize(@job.errors.count, "Error")%> Stoped this post from saving </h2>
				<ul>
					<%= @job.errors.full_messages.each do |msg| %>
						<li> <%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :title %><br>
			<%= f.text_area :title, size: "60x1" %>
		</p>
		<p>
			<%= f.label :description %><br>
			<%= f.text_area :description, size: "100x10" %>
		</p>
		<p>
			<%= f.label :requirements %><br>
			<%= f.text_area :requirements, size: "100x10" %>
		</p>
		<p>
			<%= f.submit 'Cadastrar Vaga' %>
		</p>
	<% end %>
</div>