<div>
	<h1 class="title">
		<%=	@project.name%>
	</h1>

	<p class="date">
		Submitted <%= time_ago_in_words(@project.created_at) %> ago
	</p>

	<p class="body">
		Criado por: <strong><%= @project.author %></strong><br>
		Categoria: <strong><%= @project.category %></strong>
	</p>

	<div class="post_wrapper">
		<%= @project.description %>
	</div>
	<% if user_signed_in? %>
	<button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i><%= link_to 'Editar', edit_project_path(@project) %></button>
	<button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i><%= link_to 'Apagar', project_path(@project), method: :delete, data: {confirm: "VocÃª tem certeza?"} %>
	<% end -%>
</div>
