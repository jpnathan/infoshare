<div>
	<%= form_for @project do |f| %>

		<% if @project.errors.any? %>
			<div>
				<h2> <%= pluralize(@project.errors.count, "Error")%> Stoped this post from saving </h2>
				<ul>
					<%= @project.errors.full_messages.each do |msg| %>
						<li> <%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name, size: "40x1"%>
		</p>
		<p>
			<%= f.label :author %><br>
			<%= f.text_field :author, size: "40x1" %>
		</p>
		<p>
			<%= f.label :category %><br>
			<%= f.select :category, ['Empresa Junior', 'TCC', 'Mentoria', 'Eventos', 'Dicas', 'Outros'], size: "40x1" %>
		</p>
		<p>
			<%= f.label :description %><br>
			<%= f.text_area :description, size: "80x10" %>
		</p>
		<p>
			<%= f.submit 'Cadastrar Projeto' %>
		</p>
	<% end %>
</div>