<div>
	<%= form_for @project, url: new_cadproject_path(@project) do |f| %>

		<% if @project.errors.any? %>
			<div>
				<h2> <%= pluralize(@project.errors.count, "Error")%> Stoped this post from saving </h2>
				<ul>
					<%= @project.errors.full_messages.each do |msg| %>
						<li> <%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :nome %><br>
			<%= f.text_field :nome%>
		</p>
		<p>
			<%= f.label :autor %><br>
			<%= f.text_field :autor %>
		</p>
		<p>
			<%= f.label :categoria %><br>
			<%= f.select :categoria, ['Empresa Junior', 'TCC', 'Mentoria', 'Eventos'] %>
		</p>
		<p>
			<%= f.label :descricao %><br>
			<%= f.text_area :descricao %>
		</p>
		<p>
			<%= f.submit 'Cadastrar Projeto' %>
		</p>
	<% end %>
</div>